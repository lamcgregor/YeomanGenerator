.carousel
    position relative
    margin-bottom 50px
    max-width 900px
    margin 0 auto
    .slide
        display inline-block
    .slick
        &-list
            overflow hidden
        &-arrow
            position absolute
            top 100%
            height 40px
            width 40px
            background-color $aq-grey
            border none
            color $aq-yellow
        &-next
        &-prev
            font-size 0
            &:before
                font-size 2rem
        &-next
            right 0
            &:before
                content ">"
        &-prev
            &:before
                content "<"
        